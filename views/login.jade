extends layout

block content
  .container
    .row
      .col-md-6.col-md-offset-3
        form#loginForm.form-horizontal(action='/login/handler', method='post')
          .form-group
            label.col-md-2(for='loginUsername') Username
            .col-md-10
              input#loginUsername.form-control(type="text", placeholder="Username")
          .form-group
            label.col-md-2(for='loginPassword') Password
            .col-md-10
              input#loginPassword.form-control(type="password", placeholder="Password", disabled)
          button.btn.btn-primary.btn-lg.btn-block(type="submit") Login
          hr
          button.btn.btn-success.btn-lg.btn-block(type="submit") Register
