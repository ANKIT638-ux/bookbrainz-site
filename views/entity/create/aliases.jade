.row
  .col-md-12
    p.lead Add and remove aliases to the new entity.
h2 Add Alias
.row
  .col-md-6.col-md-offset-3.form-horizontal
    .form-group
      label.col-md-3.control-label Name
      .col-md-9
        input.form-control(type='text', name="name", onchange='test()', data-bind="value: newName")
    .form-group
      label.col-md-3.control-label Sort Name
      .col-md-9
        input.form-control(type='text', name="sortName", data-bind="value: newSortName")
    .form-group
      .col-md-2.col-md-offset-10
        button.btn.btn-success.btn-block.fa.fa-plus(title="Add Alias", data-bind="click: addAlias")
hr
h2 Added Aliases
.row
  .col-md-6.col-md-offset-3
    .row(data-bind="foreach: aliases")
      .col-md-5(data-bind="text: name")
      .col-md-5(data-bind="text: sortName")
      .col-md-2
        button.btn.btn-danger.btn-block.fa.fa-minus(title="Remove Alias", data-bind="click: $parent.removeAlias")
