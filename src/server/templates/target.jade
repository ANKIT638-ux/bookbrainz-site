doctype html
html
	head
		title= title ? title + ' – BookBrainz' : 'BookBrainz – The Open Book Database'
		if !dev
			link(rel='stylesheet', href='/stylesheets/style.css')
			link(rel='stylesheet', href='/stylesheets/react-virtualized.css')
			link(rel='stylesheet', href='/stylesheets/react-virtualized-select.css')
			//- Once css bundling with webpack has been sorted out:
			//- link(rel='stylesheet', href='/stylesheets/bundle.css')
		meta(name='viewport', content='width=device-width, initial-scale=1')
		include favicon
	body
		div#target!= markup
		script(src='/js/bundle.js')
		if page
			script(type='application/json')#page!= page
		if props && script
			script(type='application/json')#props!= props
			script(src=script)
