doctype html
html
	head
		title= title ? title + ' – BookBrainz' : 'BookBrainz – The Open Book Database'
		link(rel='stylesheet', href='/stylesheets/style.css')
		link(rel='stylesheet', href='/stylesheets/react-virtualized.css')
		link(rel='stylesheet', href='/stylesheets/react-virtualized-select.css')

		include favicon
	body
		div#target!= markup
		script(src='/js/bundle.js')
		if page
			script(type='application/json')#page!= page
		if props && script
			script(type='application/json')#props!= props
			script(src=script)
