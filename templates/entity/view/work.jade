extends ./entity

block icon
	span.fa.fa-file-text-o

block picture
	span.fa.fa-file-text-o.picture-fallback-icon-large

block attributes
	+type(entity.workType)

	dt Languages
	dd
		if entity.revision.data && entity.revision.data.languages
			=entity.revision.data.languages.map(function(l){return l.name;}).join(', ')
		else
			| ?
