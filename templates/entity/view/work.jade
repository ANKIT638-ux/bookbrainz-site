extends /layout

block body
  include /navbar

  .container#content
    .row
      .col-md-12
        h1
          small.pull-right
            a(href='/work/'+entity.bbid+'/history')
              span.sr-only History
              code='r'+entity.revision.revision_id
          if entity.default_alias
            =entity.default_alias.name
            |&nbsp;
          if entity.disambiguation
            small='('+entity.disambiguation.comment+')'
        hr
    .row
      .col-md-8
        h2
          small.pull-right
            a.btn.btn-warning.btn-xs.fa.fa-pencil.entity-action(title='Edit Relationships', href='/work/'+entity.bbid+'/relationships')
              span.sr-only Edit relationships
          | Relationships
        ul.list-unstyled
          if entity.relationships
            for relationship in entity.relationships
              li!=relationship.rendered

      .col-md-4
        .text-center No Image
        hr
        dl
          dt Type
          dd=(entity.work_type ? entity.work_type.label : '?')

          dt Languages
          dd
            if entity.languages
              =entity.languages.map(function(l){return l.name;}).join(', ')
            else
              | ?

          dt Begin Date
          dd=(entity.begin_date ? entity.begin_date : '?')

          if entity.ended
            dt End Date
            dd=(entity.end_date ? entity.end_date : '?')

          dt Last Modified
          dd=(new Date(entity.last_updated)).toLocaleDateString()

  include /footer
