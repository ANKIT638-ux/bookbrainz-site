extends ../layout

block body
	.row
		.col-md-12
			h1=editor.name
	.row
		.col-md-12
			ul.nav.nav-tabs
				li.active: a(href='./'+editor.id) Profile
				li: a(href='./'+editor.id+'/revisions') Revisions
	.row
		.col-md-12
			h2 Basic Info
				if user
					if editor.id == user.id
						small.pull-right
							a.btn.btn-warning.entity-action(title='Edit basic editor info', href='/editor/edit')
								span.fa.fa-pencil
								|&nbsp;Edit Profile
			dl.dl-horizontal
				dt Email
				dd
					if editor.email
						=editor.email
						| &nbsp;
					i (hidden)
				dt Type
				dd=editor.type.label
				dt Reputation
				dd 0
				dt Joined
				dd=(new Date(editor.createdAt)).toUTCString()
				dt Last Active
				dd=(new Date(editor.activeAt)).toUTCString()
				dt Bio
				dd=(editor.bio ? editor.bio : '-')
			h2 Stats
			dl.dl-horizontal
				dt Total Revisions
				dd=editor.totalRevisions
				dt Revisions Applied
				dd=editor.revisionsApplied
				dt Revisions Reverted
				dd=editor.revisionsReverted
			h2 Badges
			.col-md-3
				.well
					img(width="50%", src="/images/Revisionist2.png").center-block
					p.text-center Revisionist II
					p.text-center Perform five revisions
					p.text-center Unlocked: 09/06/2016
			.col-md-3
				.well
					img(width="50%", src="/images/Creator Creator2.png").center-block
					p.text-center Creator Creator II
					p.text-center Create five creators
					p.text-center Unlocked: 09/06/2016
			.col-md-3
				.well
					img(width="50%", src="/images/sadface.png").center-block
					p.text-center No badge to show, why not try viewing some entries
